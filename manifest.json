{
    "manifest_version": 3,
    "name": "hasbulla",
    "description": "Image changer for all images appearing on a Chrome tab",
    "version": "1.0",
    "icons": {
      "16": "hasbulla.png",
      "48": "hasbulla.png",
      "128": "hasbulla.png"
    },
    "action": {
      "default_icon": {
        "16": "hasbulla.png",
        "48": "hasbulla.png",
        "128": "hasbulla.png"
      }
    },
    "permissions": [
      "declarativeNetRequest"
    ],
    "declarative_net_request": {
      "rule_resources": [{
        "id": "replace-images",
        "enabled": true,
        "path": "rules.json"
      }]
    },
    "web_accessible_resources": [{
      "resources": ["hasbulla.png"],
      "matches": ["<all_urls>"]
    }],
    "content_scripts": [{
      "matches": ["<all_urls>"],
      "css": ["style_sheet.css"],
      "js": ["main.js"],
      "run_at": "document_start"
    }]
  }
  